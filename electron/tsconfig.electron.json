{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "../dist-electron",

    /* ESM moderno compatible con Node/Electron */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Calidad de vida */
    "lib": ["ES2022", "DOM"],
    "types": ["node", "electron"],
    "skipLibCheck": true,
    "strict": false,
    "sourceMap": false,

    /* Para poder importar CJS (p. ej. electron-updater) c√≥modamente */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts", "./**/*.d.ts"]
}
